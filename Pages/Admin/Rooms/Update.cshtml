@page
@model Cinemo.Pages.Admin.Room.UpdateModel

@using Cinemo.Models;

@section Scripts{
  <script src="~/js/Validation.js"></script>
  <script src="~/js/checkbox.js"></script>
}

<div class="row no-gutters justify-content-center align-self-center m-auto">
  <div style="width: 550px">
    <a href="/Admin/Rooms">
      <i class="fa fa-arrow-left mr-1"></i>Back to Rooms
    </a>

    <div class="display-4 text-center">
      Change room
    </div>

    <hr class="my-4">
    <form method="POST" class="needs-validation" novalidate>
      <partial name="Shared/_ErrorAlert" model="@Model.ErrorMessage" />

      <input value="@Model.OldRoom.Id" asp-for="@Model.UpdateDto.Id" hidden> 
      <div class="form-group row mx-0">
        <label class="col-sm-3 col-form-label mr-sm-1 pl-0">
          New name:  
        </label>
        <input class="form-control col" value="@Model.OldRoom.Name" asp-for="@Model.UpdateDto.Name" placeholder="Enter new name" required>
        <div class="invalid-feedback text-center">
          Room name is required.
        </div>
      </div>
  
      <div class="form-group row mx-0">
        <label for="new-name" class="col-sm-3 col-form-label mr-sm-1 pl-0">
          Column number:
        </label>
        <input class="form-control col" min="0" value="@Model.OldRoom.NumCol" asp-for="@Model.UpdateDto.NumCol" placeholder="Enter number"required>
        <div class="invalid-feedback text-center">
            Column number is required.
        </div>
      </div>

      <div class="form-group row mx-0">
        <label for="new-name" class="col-sm-3 col-form-label mr-sm-1 pl-0">
          Row number:
        </label>
        <input class="form-control col" min="0" value="@Model.OldRoom.NumRow" asp-for="@Model.UpdateDto.NumRow" placeholder="Enter number"required>
        <br>
        <div class="invalid-feedback text-center">
          Row number is required.
        </div>
      </div>

      <div class="form-group row mx-0">
          <label class="col-3 pl-0">
            Format:
          </label>

          <input type="text" asp-for="UpdateDto.Formats" id="formats" hidden>
          @foreach (string name in Enum.GetNames(typeof(Room.Format))) {
            if(@Model.OldRoom.Formats.Contains(name)){
              <div class="custom-control custom-checkbox mr-1">
                <input type="checkbox" required
                       class="custom-control-input required_group" 
                       name="format"
                       value="@name" 
                       id="@name" checked>
                <label class="custom-control-label"
                       for="@name">
                       @name.Substring(1)
                </label>
              </div>
            } else {
              <div class="custom-control custom-checkbox mr-1">
                <input type="checkbox" required
                       class="custom-control-input required_group" 
                       name="format"
                       value="@name" 
                       id="@name">
                <label class="custom-control-label"
                       for="@name">
                       @name.Substring(1)
                </label>
              </div>
            }
          }
      </div>
      <input hidden asp-for="@Model.UpdateDto.TheaterId" value="@Model.OldRoom.TheaterId">
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
      </div>

    </form>
  </div>
</div>
@page
@model Cinemo.Pages.UpdateCategoryModel

@section Scripts{
    <script src="~/js/Validation.js"></script>
}

<div class="row no-gutters justify-content-center align-self-center m-auto">
	<div style="width: 400px">
		<div class="display-4 text-center">
			Change name
		</div>

		<hr class="my-4">

		<form method="POST" class="needs-validation" novalidate>
      <div class="form-group row mx-0">
        <label for="new-name" class="col-sm-3 col-form-label mr-sm-1 pl-0">
         New name:
        </label>
        <input asp-for="@Model.category.Id" hidden>
        <input value="@Model.category.Name" id="new-name" required type="text" class="form-control col" asp-for="@Model.newName">

				<div class="invalid-feedback">
					Category name is required !
				</div>
        
      </div>
      @if (@Model.ErrorMessage != null)
      {
          <div class="alert alert-danger alert-dismissible fade show" role="alert" style="border-radius: 10px;">
              <strong>Error:</strong> @Model.ErrorMessage
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <i class="fas fa-times"></i>
              </button>
          </div>
      }
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
			</div>

			<a href="/Admin/Categories/Index">
				<i class="fa fa-arrow-left mr-1"></i>Back to Categories
			</a>
		</form>
	</div>
</div>
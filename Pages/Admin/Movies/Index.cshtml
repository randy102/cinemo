@page
@model Cinemo.Pages.Movie.IndexModel
@{
  Layout = "_AdminLayout";
}

@section Scripts {
  <script>
    function handleDelete(form) {
      confirmDelete({
        form: form,
        title: "Delete post?",
        message: "Are you sure you want to delete this post?",
      });
    }
  </script>
}

<div class="container">
  <div class="mb-3">
    <div class="d-inline-block display-4 mr-3">Movies</div>
    <a class="btn btn-success btn-sm align-text-bottom ml-auto" href="/Admin/Movies/Create">
      <i class="fas fa-plus"></i>
      Create Movie
    </a>
  </div>

  @if (Model.ErrorMessage != null) {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      @Model.ErrorMessage
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  }

  @* Thông tin cần có *@
  <div class="cinemo-datatable">
    <table class="table">
      <thead>
        <tr>
          <th>
            <div>Title</div>
          </th>
          <th>
            <div>Category</div>
          </th>
          <th>
            <div>CreatedAt</div>
          </th>
          <th>
            <div>CreatedBy</div>
          </th>
          <th>
            <div>Delete</div>
          </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var post in Model.Movies) {
          <tr>
            <td>@post.Title</td>
            <td>@post.Category.Name</td>
            <td>@post.CreatedAt.ToShortDateString()</td>
            <td>@post.Author.UserName</td>
            <td>
              <form id="delete-category" method="POST" asp-page-handler="Delete">
                <input type="hidden" name="id" value="@post.Id">

                <button type="button" class="btn btn-round btn-danger btn-sm" onclick="handleDelete(this.form)">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
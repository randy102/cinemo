@page
@model Cinemo.Pages.Admin.ShowTime.CreateModel

@using Cinemo.Models;

@{
  Layout = "_AdminLayout";

  var types = new[] {
    new {
      label = "Subtitles",
      value = "subtitles"
    },
    new {
      label = "Dubbed",
      value = "dubbed"
    },
    new {
      label = "Vietnamese",
      value = "vietnamese"
    }
  };

  DateTime time = DateTime.Now;
}

@section Scripts {
  <script src="~/js/Validation.js"></script>

  <script>
    $(document).ready(function () {
      $('#datetimepicker').flatpickr({
        enableTime: true,
        time_24hr: true,
        dateFormat: "H:i - d/m/Y",
        minDate: "today",
        locale: {
          firstDayOfWeek: 1
        }
      });
    })
  </script>
}

<div class="container">
  <a href="/Admin/ShowTimes">
    <i class="fas fa-angle-left mr-1"></i>Back to Show Times
  </a>

  <div class="display-4">
    Create Show Time
  </div>

  <hr class="my-4">

  <form class="needs-validation" method="POST">
    <partial name="Shared/_ErrorAlert" model="@Model.ErrorMessage" />

    <div class="form-group required">
          <label for="room-select">Room</label>
          <select asp-for="@Model.CreateDto.RoomId" required
                asp-items="@Model.RoomSelectList" 
                id="room-select"
                class="selectpicker d-block col-6 p-0"
                title="Choose room"
                data-style="custom-select"
                data-size="5"
                data-live-search="true"
                data-live-search-normalize="true"
                data-live-search-placeholder="Search...">
          </select>
    </div>

    <div class="form-group required">
          <label for="movie-select">Movie</label>
          <select asp-for="@Model.CreateDto.MovieId" required
                asp-items="@Model.MovieSelectList" 
                id="movie-select"
                class="selectpicker d-block col-6 p-0"
                title="Choose movie"
                data-style="custom-select"
                data-size="5"
                data-live-search="true"
                data-live-search-normalize="true"
                data-live-search-placeholder="Search...">
          </select>
    </div>

    <div class="form-group">
      <label>Extra price</label>

      <div class="input-group">
        <input class="form-control col-3 price-input"
               placeholder="0"
               value="0"
               type="number"
               asp-for="CreateDto.ExtraPrice">

        <div class="input-group-append">
          <span class="input-group-text">₫</span>
        </div>
      </div>
    </div>

    <div class="form-group mx-0">
      <label>Show Type</label><br>
      <select asp-for="CreateDto.Type" class="form-control col-7">
        @{
          foreach (var type in Enum.GetValues(typeof(Cinemo.Models.ShowTime.ShowType))) {
            <option asp-value="type">@type</option>
          }
        }
      </select>
    </div>

  

    <div class="form-group required">
      <label>Time & Date</label>

      <input required
             id="datetimepicker"
             class="form-control col-3 bg-white"
             placeholder="Choose time & date..."
             type="text"
             asp-for="CreateDto.Time">
    </div>

    <div class="form-group required">
      <label>Format</label>

      <br />
<select asp-for="CreateDto.Format" class="form-control col-7">
      @foreach (string showFormat in Enum.GetNames(typeof(ShowTime.FormatEnum))) {
       <option value="@showFormat">@showFormat</option>
      }
    </select>
    </div>
        <div class="form-group">
      <button class="btn btn-primary" type="submit" name="Submit" id="">
        Create show time
      </button>
    </div>
  </form>
</div>


@page
@model Cinemo.Pages.Admin.ShowTime.CreateModel
@{
  Layout = "_AdminLayout";
}

@section Scripts {
  <script src="~/js/Validation.js"></script>
}

<div class="container">
  <div class="display-4">
    Create Show Time
  </div>

  <hr class="my-4">

  <form class="needs-validation" method="POST" novalidate>
    <div class="form-group row mx-0">
      <label class="col-sm-1 col-form-label mr-sm-1 pl-0">
        Theater:
      </label>
      <select class="col" style="border: 1px solid #ced4da; border-radius: 0.25rem; outline: none;">
          @*@{
            foreach(var theater in Theaters){
              <option>@theater</option>
            }
          }*@
        </select>
    </div>

    <div class="form-group row mx-0">
      <label class="col-sm-1 col-form-label mr-sm-1 pl-0">
        Movie:
      </label>
      <select class="col" style="border: 1px solid #ced4da; border-radius: 0.25rem; outline: none;">
          @*@{
            foreach(var movie in Movies){
              <option>@movie</option>
            }
          }*@
        </select>
    </div>

    <div class="form-group row mx-0">
        <label class="col-form-label mr-sm-0 pr-0 pl-0">
          Extra price:
        </label>
        <input type="number" class="form-control col" @*asp-for=""*@ required>
        <div class="invalid-feedback">
          Extra price is required !
        </div>
      </div>
    
    <div class="form-group row mx-0">
      <label class="col-sm-1 col-form-label mr-sm-1 pl-0">
        Type:
      </label>
      <select class="col" style="border: 1px solid #ced4da; border-radius: 0.25rem; outline: none;">
        <option>Subtitle</option>
        <option>Dubbed</option>
        <option>Viet Nam</option>
      </select>
    </div>

    <div class="form-group row mx-0">
      <label class="col-sm-1 col-form-label mr-sm-1 pl-0">
        Time:
      </label>
      <input class="form-control col" type="time" @*asp-for=""*@ required>
      <div class="invalid-feedback">
        Time is required !
      </div>
    </div>

    <div class="form-group row mx-0">
      <label class="col-sm-1 col-form-label mr-sm-1 pl-0">
        Format:
      </label>
      <select class="col" style="border: 1px solid #ced4da; border-radius: 0.25rem; outline: none;">
          @*@{
            foreach(var format in formats){
              <option>@movie</option>
            }
          }*@
        </select>
    </div>
    @*
    @if(Model.errMsg != null){
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          @Model.errMsg
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      }*@

    <div class="form-group">
      <button class="btn btn-primary" type="submit" name="Submit" id="">
        Create
      </button>
    </div>

    <a href="/Admin/ShowTimes">
      <i class="fas fa-angle-left mr-1"></i>Back to Show Times
    </a>
  </form>
</div>

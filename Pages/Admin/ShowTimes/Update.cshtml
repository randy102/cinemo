@page
@model Cinemo.Pages.Admin.ShowTime.UpdateModel

@using Cinemo.Models;

@{
  Layout = "_AdminLayout";

  string format = "HH:mm - dd/MM/yyyy";
}

@section Scripts {
  <script src="~/js/Validation.js"></script>

  <script>
    $(document).ready(function () {
      $('#datetimepicker').flatpickr({
        enableTime: true,
        time_24hr: true,
        dateFormat: "H:i - d/m/Y",
        minDate: "today",
        locale: {
          firstDayOfWeek: 1
        }
      });
    })

  </script>
}

<div class="container">
  <a href="/Admin/ShowTimes">
    <i class="fas fa-angle-left mr-1"></i>Back to Show Times
  </a>

  <div class="display-4">
    Change Show Time
  </div>

  <hr class="my-4">

  <form class="needs-validation" method="POST">
    <partial name="Shared/_ErrorAlert" model="@Model.ErrorMessage" />
    <input hidden asp-for="@Model.UpdateDto.Id" value="@Model.OldShowTime.Id">
    <div class="form-group required">
          <label for="room-select">Room</label>
          <select asp-for="@Model.UpdateDto.RoomId" required
                asp-items="@Model.rooms" 
                id="room-select"
                class="selectpicker d-block col-6 p-0"
                title="Choose room"
                data-style="custom-select"
                data-size="5"
                data-live-search="true"
                data-live-search-normalize="true"
                data-live-search-placeholder="Search...">
          </select>
    </div>

    <div class="form-group required">
          <label for="movie-select">Movie</label>
          <select asp-for="@Model.UpdateDto.MovieId" required
                asp-items="@Model.movies" 
                id="movie-select"
                class="selectpicker d-block col-6 p-0"
                title="Choose movie"
                data-style="custom-select"
                data-size="5"
                data-live-search="true"
                data-live-search-normalize="true"
                data-live-search-placeholder="Search...">
          </select>
    </div>

    <div class="form-group">
      <label>Extra price</label>

      <div class="input-group">
        <input class="form-control col-3 price-input"
               placeholder="0"
               value="@Model.OldShowTime.ExtraPrice"
               type="number"
               asp-for="UpdateDto.ExtraPrice">

        <div class="input-group-append">
          <span class="input-group-text">₫</span>
        </div>
      </div>
    </div>

    <div class="form-group mx-0">
      <label>Show Type</label>
      <select asp-for="UpdateDto.Type" class="form-control col-7" value="@Model.OldShowTime.Type">
        @{
          foreach (var type in Enum.GetValues(typeof(Cinemo.Models.ShowTime.ShowType))) {
            <option selected="@type.Equals(Model.OldShowTime.Type.ToString())" asp-value="@type">@type</option>
          }
        }
      </select>
    </div>
    <div class="form-group required">
      <label>Time & Date</label>

      <input required
             value="@Model.OldShowTime.Time.ToString(format)"
             id="datetimepicker"
             class="form-control col-3 bg-white"
             placeholder="Choose time & date..."
             type="text"
             asp-for="UpdateDto.Time">
    </div>

    <div class="form-group required">
      <label>Format</label>@Model.OldShowTime.Format

      <br />
      <select asp-for="UpdateDto.Format" class="form-control col-7">
        @foreach (string showFormat in Enum.GetNames(typeof(ShowTime.FormatEnum))) {
          <option selected="@showFormat.Equals(Model.OldShowTime.Format.ToString())">@showFormat</option>
        }
      </select>
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit" name="Submit" id="">
        Change show time
      </button>
    </div>
  </form>
</div>

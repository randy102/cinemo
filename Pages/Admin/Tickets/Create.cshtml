@page
@model Cinemo.Pages.Admin.Ticket.CreateModel

@{
  Layout = "_AdminLayout";
}

<div class="container">
  <a href="/Admin/Tickets">
    <i class="fas fa-angle-left mr-1"></i>Back to Tickets
  </a>

  <div class="display-4">
    Create Ticket
  </div>

  <hr class="my-4">

  <form method="post">
    <div class="form-group required">
      <label for="theater-select">Show Time</label>
      <select asp-for="@Model.CreateDto.ShowTimeId" asp-items="@Model.ShowTimeSelectList" required id="theater-select"
        class="selectpicker d-block col-6 p-0" title="Choose theater" data-style="custom-select" data-size="5"
        data-live-search="true" data-live-search-normalize="true" data-live-search-placeholder="Search...">
      </select>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Create
      </button>
    </div>
  </form>
</div>
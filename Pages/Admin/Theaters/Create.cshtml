@page
@model Cinemo.Pages.Admin.Theater.CreateModel

@{
  Layout = "_AdminLayout";
}

@section Scripts {
  <script src="~/js/Validation.js"></script>
}

<div class="container">
  <a href="/Admin/Theaters">
    <i class="fas fa-angle-left mr-1"></i>Back to Theaters
  </a>

  <div class="display-4">
    Create Theater
  </div>

    @if(Model.ErrorMessage != null){
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    }

    <form method="post" class="needs-validation" novalidate>
      <div class="form-group">
        <label>Name:</label>

        <input required type="text" asp-for="CreateDto.Name" class="form-control">

      <div class="invalid-feedback">
        Please provide a name.
      </div>

    </div>

    <div class="form-group">
      <label>Address:</label>

      <input required type="text" asp-for="CreateDto.Address" class="form-control">

      <div class="invalid-feedback">
        Please provide a address
      </div>

    </div>


    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Create Theater
      </button>
    </div>
  </form>
</div>

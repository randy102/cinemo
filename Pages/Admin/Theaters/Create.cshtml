@page
@model Cinemo.Pages.Admin.Theater.CreateModel

@{
  Layout = "_AdminLayout";
}

@section Scripts {
  <script src="~/js/Validation.js"></script>
}

<div class="container">
  <a href="/Admin/Theaters">
    <i class="fas fa-angle-left mr-1"></i>Back to Theaters
  </a>

  <div class="display-4">
    Create Theater
  </div>

  
    <form method="post" class="needs-validation" novalidate>
      <partial name="Shared/_ErrorAlert" model="@Model.ErrorMessage" />

      <div class="form-group required">
        <label>Name</label>
        <input type="text" required
               asp-for="CreateDto.Name" 
               class="form-control col" 
               placeholder="Enter name">
        <div class="invalid-feedback">
          Please provide name.
        </div>
      </div>

    <div class="form-group required">
      <label>Address</label>
      <input type="text" required
             asp-for="CreateDto.Address" 
             class="form-control" 
             placeholder="Enter address">
      <div class="invalid-feedback">
        Please provide address
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Create Theater
      </button>
    </div>
  </form>
</div>

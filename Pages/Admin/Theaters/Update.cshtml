@page
@model Cinemo.Pages.Admin.Theater.UpdateModel

@section Scripts{
  <script src="~/js/Validation.js"></script>
}

<div class="row no-gutters justify-content-center align-self-center m-auto">
	<div style="width: 500px">
		<div class="display-4 text-center">
			Change Theater
		</div>

		<hr class="my-4">

		<form method="POST" class="needs-validation" novalidate>
      <div class="form-group row mx-0">
            
        <label for="new-name" class="col-sm-3 col-form-label mr-sm-1 pl-0">
          Name:
        </label>
        <input value="@Model.OldTheater.Id" asp-for="@Model.Theater.Id"  hidden>
        <input value="@Model.OldTheater.Name" id="new-name" required type="text" class="form-control col" asp-for="@Model.Theater.Name">
        
        <div class="invalid-feedback">
          Theater name is required !
        </div>
              
      </div>
    
            <div class="form-group row mx-0">
               
                <label for="new-theatername" class="col-sm-3 col-form-label mr-sm-1 pl-0">
                   Address:
                </label>
                <input value="@Model.OldTheater.Address" id="new-name" required type="text" class="form-control col" asp-for="@Model.Theater.Address">
        
                <div class="invalid-feedback">
                    Theater address is required !
                </div>
             </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
                </div>

                <a href="/Admin/Theaters/Index">
                    <i class="fa fa-arrow-left mr-1"></i>Back to Theaters
                </a>
		</form>
	</div>
</div>
@page
@model Cinemo.Pages.Admin.TicketType.UpdateModel

@{
  Layout = "_AdminLayout";
}


<div class="container">
  <a href="/Admin/TicketTypes">
    <i class="fas fa-angle-left mr-1"></i>Back to Ticket Types
  </a>

  <div class="display-4">
    Update Ticket Type
  </div>

  <hr class="my-4">

  <form method="post">
    <div class="form-group mx-0">
      <label>Name</label><br>
      <select asp-for="TicketType.Name"
              value="@Model.OldTicketType.Name"
              class="form-control col-6">
        @{
          foreach (Cinemo.Models.TicketType.Type type in Enum.GetValues(typeof(Cinemo.Models.TicketType.Type))) {
            <option asp-value="type">@type</option>
          }
        }
      </select>
    </div>

    <div class="form-group">
      <label>Price</label>
      <div class="input-group">
        <input class="form-control col-3 price-input-label"
               type="text"
               value="@Model.OldTicketType.Price.ToString("N0")" />

        <input class="price-input-value"
               value="@Model.OldTicketType.Price"
               hidden
               type="number"
               asp-for="TicketType.Price">

        <div class="input-group-append">
          <span class="input-group-text">₫</span>
        </div>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">
        Save
      </button>
    </div>
  </form>
</div>
                }

                <div class="seat ml-3">
                  @rowChar
                </div>
              </div>
            }

            <div class="d-flex mt-3 justify-content-center">
              @for (var col = 1; col <= NumCol; col++) {
                <div class="seat mr-1">
                  @col

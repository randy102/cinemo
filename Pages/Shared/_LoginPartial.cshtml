        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger mr-2">Logout</button>
            </form>
        </li>

        <div class="dropdown">
            <a class="btn btn-primary dropdown-toggle text-white" data-toggle="dropdown">
                @User.Identity.Name
            </a>

            <div class="dropdown-menu dropdown-menu-right">
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <i class="fa fa-user fa-fw mr-2"></i> Profile
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <a class="dropdown-item" href="/Admin/Users">
                        <i class="fa fa-cog fa-fw mr-2"></i> Control Panel
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
